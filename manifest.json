{
  "name": "News Swapper",
  "version": "1.0",
  "description": "Swaps news articles for those from other sites.",
  "icons": {
	"512": "icon512.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://www.foxnews.com/*",
    "https://www.vox.com/*",
    "https://www.msnbc.com/*",
    "https://www.breitbart.com/*",
    "https://www.cnn.com/*",
    "https://www.wsj.com/*",
    "https://www.nytimes.com/*",
    "https://www.infowars.com/*",
    "https://www.theatlantic.com/*",
    "https://www.theonion.com/*",
	"https://www.bbc.com/*",
	 "https://www.cbsnews.com/*",
	"https://www.economist.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.foxnews.com/*",
        "https://www.vox.com/*",
        "https://www.msnbc.com/*",
        "https://www.breitbart.com/*",
        "https://www.cnn.com/*",
        "https://www.wsj.com/*",
        "https://www.nytimes.com/*",
        "https://www.infowars.com/*",
        "https://www.theatlantic.com/*",
        "https://www.theonion.com/*",
		"https://www.bbc.com/*",
		"https://www.cbsnews.com/*",
	    "https://www.economist.com/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "manifest_version": 2
}